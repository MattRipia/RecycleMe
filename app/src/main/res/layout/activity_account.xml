<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="50dp">





    <Button
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="16dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zone_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_detail_text" />



    <Button
        android:id="@+id/zone_button"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="11dp"
        android:text="Zone"
        app:layout_constraintBaseline_toBaselineOf="@+id/logout_button"
        app:layout_constraintEnd_toStartOf="@+id/scan_button"
        app:layout_constraintStart_toEndOf="@+id/logout_button" />

</android.support.constraint.ConstraintLayout>