<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="50dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="54dp"
        android:src="@drawable/recycleme_logo"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintStart_toStartOf="@+id/text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="134dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:text="@string/recycleme_details"
        app:layout_constraintBottom_toTopOf="@+id/profile_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="47dp"
        android:text="Profile: "
        app:layout_constraintBottom_toTopOf="@+id/user_detail_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <TextView
        android:id="@+id/user_detail_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="287dp"
        app:layout_constraintBottom_toTopOf="@+id/scan_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="16dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zone_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_detail_text" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="16dp"
        android:text="Scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zone_button"
        app:layout_constraintTop_toBottomOf="@+id/user_detail_text" />

    <Button
        android:id="@+id/zone_button"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="11dp"
        android:text="Zone"
        app:layout_constraintBaseline_toBaselineOf="@+id/logout_button"
        app:layout_constraintEnd_toStartOf="@+id/scan_button"
        app:layout_constraintStart_toEndOf="@+id/logout_button" />

</android.support.constraint.ConstraintLayout>